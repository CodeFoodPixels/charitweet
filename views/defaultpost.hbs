<div class="mdl-grid">
    <div class="mdl-cell mdl-cell--12-col">
        <h3>Add Default Post</h3>
    </div>
    <div class="mdl-cell mdl-cell--12-col">
        <form action="" method="post">
            <div id="posts">
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    <textarea class="mdl-textfield__input" rows="3" id="post" name="post"></textarea>
                    <label class="mdl-textfield__label" for="post">Post</label>
                </div>
            </div>
            <div>
                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                    <input class="mdl-textfield__input" type="time" id="post_time" name="post_time" placeholder="">
                    <label class="mdl-textfield__label" for="post_time">Post Time</label>
                </div>
            </div>
            <button class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored" type="submit">
                Save
            </button>
        </form>
    </div>
</div>